@{
    ViewBag.Title = "Okulunuza Ait Servislerin Listesi";
    Layout = "~/Views/Shared/Okul_Layout.cshtml";
    int okulId = (int)Session["okulId"];
}
@model ServisTakip.Models.ViewModel
<div id="content">
    <script>
        document.getElementById("okulservisleri").className = "active";
    </script>
    
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Servisler
                @if (TempData["mesaj"] != null)
                {
                    <a class="btn btn-grad btn-md btn-info" value="@TempData["mesaj"]" onclick="$(this).remove()">@TempData["mesaj"]</a>
                }
            </h1>
            <ol class="breadcrumb">
                <li class="active"><a href="#"><i class="fa fa-dashboard"></i> Anasayfa</a></li>
                <li><a href="#">Okul Servisleri</a></li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-md-12 col-lg-12 col-xs-12 col-sm-12">
                    <div class="box">
                        <div class="box-header">
                            <div class="col-md-12 col-lg-12 col-xs-12 col-sm-12">
                                <div class="box box-default collapsed-box">
                                    <div class="box-header with-border">
                                        <h3 class="box-title">Yeni Servis Davet Et</h3>
                                        <div class="box-tools">
                                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                                <i class="fa fa-plus"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="box-body">
                                        <div class="box-body">
                                            <div class="form-group">
                                                <form action="~/Okul/OkulServisEkle" method="post" role="form" enctype="multipart/form-data">
                                                    <div class="col-md-4 col-lg-4 col-xs-12 col-sm-12">
                                                        <label>Servis</label>
                                                        <select id="servisId" name="servisId" class="select2 form-control" required style="width:100% !important;">
                                                            <!--.Where(x=>x.Firmalar.Ilceler.il_id == Model.Okullar.Where(x=>x.okulId==okulId).First().Ilceler.Iller.il_id)-->
                                                            @foreach (var firmaServisleri in Model.FirmaServisleri.Where(x => x.Servisler.aktifMi == true /*&& Model.OkulServisleri.Where(y=>y.okulId==okulId).First().servisId!=x.servisId*/))
                                                            {
                                                                <option value="@firmaServisleri.servisId">@firmaServisleri.Servisler.plaka | @firmaServisleri.Servisler.sicilNo | @firmaServisleri.Firmalar.firAd</option>
                                                            }
                                                        </select>
                                                    </div>
                                                    <div class="col-md-4 col-lg-4 col-xs-12 col-sm-12">
                                                        <label>Servis Doğrulama Kodu</label>
                                                        <input name="authCode" required type="text" id="authCode" class="form-control" placeholder="Doğrulama Kodunu Girin">
                                                        <input name="okulId" required type="text" hidden="hidden" id="okulId" value="@okulId">
                                                    </div>
                                                    <div class="col-md-2 col-lg-2 col-xs-12 col-sm-12">
                                                        <label>İşlemler</label>
                                                        <button type="submit" class="btn btn-primary form-control">Servis Davet Et</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="box-body">
                            <div class="table-responsive">
                                <table class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Plaka</th>
                                            <th>Sicil No</th>
                                            <th>Firma</th>
                                            <th>İşlemler</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var okulServisi in Model.OkulServisleri.Where(x => x.okulId == okulId))
                                        {
                                            <tr>
                                                <td>@okulServisi.okulServisId</td>
                                                <td>@okulServisi.Servisler.plaka</td>
                                                <td>@okulServisi.Servisler.sicilNo</td>
                                                <td>@Model.FirmaServisleri.Where(x => x.servisId == okulServisi.servisId).First().Firmalar.firAd</td>
                                                <td>
                                                    <span class="button-group">
                                                        <button type="button" class="btn btn-info fa fa-globe" data-toggle="modal" data-target="#okulServisleri" onclick="haritaYukle('@okulServisi.servisId' , '@okulServisi.Servisler.plaka')"></button>

                                                        <a href="/Okul/OkulServisSil?okulId=@((int)Session["okulId"])&okulServisId=@okulServisi.okulServisId" name="@okulServisi.servisId" onclick="return confirm('Emin Misiniz?')" class="btn btn-danger btn-md btn-grad fa fa-trash"></a>
                                                    </span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                            <!-- SERVİS GÖSTER-->
                        <div class="modal fade bs-example-modal-lg" id="okulServisleri" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                            <div class="modal-dialog" style="width:750px;" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                        <h4 class="modal-title" id="myModalLabel">Servis Harita Konumu</h4>
                                    </div>
                                    <div class="modal-body">
                                        <div id="map"  style="width: 720px;height: 720px;">
                                                
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
<script>
    var googleMap;
    var googleMarker;
    function initMap() {
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 11,
            center: { lat: parseFloat(@ViewBag.okulLatitude), lng: parseFloat(@ViewBag.okulLongitude) }

        });
        var marker = new google.maps.Marker({
            position: { lat: parseFloat(@ViewBag.okulLatitude), lng: parseFloat(@ViewBag.okulLongitude) },
            map: map,
            title: 'Okulumuz!'
        });
        googleMap = map;
        googleMarker = marker;
    };
</script>

<script>
    function haritaYukle(servisId, servisPlaka) {
        $('#map').empty();
        googleMap = null;
        googleMap = new google.maps.Map(document.getElementById('map'), {
            zoom: 11,
            center: { lat: parseFloat(@ViewBag.okulLatitude), lng: parseFloat(@ViewBag.okulLongitude) }

        });
        setInterval(function () {
            $.ajax({
            url: '/Okul/ServisKonumGetir',
            type: 'post',
            async: false,
            dataType: 'json',
            data: { servisId: servisId, okulId: okulId },
            success:
                function (servisKonum)
                {
                    if (servisKonum != -1 || servisKonum != 1) {
                        googleMap.setCenter(new google.maps.LatLng({ lat: parseFloat(servisKonum.lat), lng: parseFloat(servisKonum.lng) }));
                        googleMarker.setMap(null);
                        googleMarker = new google.maps.Marker({
                            position: { lat: parseFloat(servisKonum.lat), lng: parseFloat(servisKonum.lng) },
                            map: googleMap,
                            title: servisPlaka
                        });
                    }
                    else if (servisKonum == 1) {
                        googleMap.setCenter(new google.maps.LatLng({ lat: parseFloat(@ViewBag.okulLatitude), lng: parseFloat(@ViewBag.okulLongitude) }));
                        alertHata();
                    }
                    else if (servisKonum == -1) {
                        return alertLoginHatasi();
                    }
                }
            });
        },3000);
    };

</script>

<script>
    $(function () {
        $('.table').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "scrollX": true,
            "ordering": true,
            "info": true,
            "autoWidth": false
        });
    });
</script>